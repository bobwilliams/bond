#conversations(ng-controller='ConversationsCtrl')
	div.conversation(ng-show='conversation.isActive', ng-repeat='conversation in conversations', ng-controller='ConversationCtrl')
		div.messages(sticky-bottom)
			div.message(ng-repeat='message in conversation.messages track by $index') {{ message }}
		textarea.compose(fauxcus='conversation.isActive', ng-model='messageText', ng-keydown='sendMessage($event)')

	ul#tabs.list-unstyled
		li.buddy-state-offline Test 1
		li.buddy-state-offline Test 2
		li(ng-class='{"buddy-state-{{conversation.contact.state}}": true, active: conversation.isActive}',
			ng-click='setActiveConversation(conversation)',
			ng-repeat='conversation in conversations')
			| {{ conversation.contact.name }}
